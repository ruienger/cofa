{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
      "types": ["types"],
      "core": ["/src/core"],
      "utils": ["/src/utils"],
      "bin": ["/src/bin"],
      "command": ["/src/command"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  }
}
